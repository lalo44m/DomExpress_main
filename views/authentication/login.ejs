<%- include('../partials/header') %>
<title>Inicio de sesión</title>
</head>
<body>
<%- include('../partials/navbar') %>

 <main>

  <div class="container-fluid my-2">
    <%- include("../partials/flash") %>
  </div>  

  <div class="container-fluid my-2">
      <%if(register!=""){%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= register %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <%}%>
  </div> 
    <div class="container">
        <h2 class="text-center mt-5">Inicia Sesión</h2>
       
        <div class="form-section d-flex justify-content-center align-items-center my-5 " >
            <form action="/login" method="post" class="login-form needs-validation res-width" novalidate>
                <!-- 2 column grid layout with text inputs for the first and last names --> 
                <div class="form-outline mb-4">
                      <input type="text" id="username" class="form-control" name="username" />
                      <label class="form-label" for="username">Nombre usuario</label>
                      <div class="invalid-feedback">*Campo requerido</div>
                    </div>
                  
              
                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" id="password" class="form-control" name="password"/>
                  <label class="form-label" for="password">Contraseña</label>
                  <div class="invalid-feedback">*Campo requerido</div>
                </div>
              
                <!-- Checkbox -->
                
              
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Iniciar sesion</button>
              
                <!-- Register buttons -->
                <div class="text-center">
                  <p>¿Aún no tienes cuenta? <a href="/register">Entra para crear una</a></p>
                  <p><a href="/rPass">Olvidé mi Contraseña</a></p>
                  <!--
                    <a href="/auth/google" class="btn btn-primary btn-floating mx-1 mb-2" style="transform:scale(1.2)">
                    <i class="fab fa-google"></i>
                  </a>     
                  <h5>Google</h5>   
                    -->
                 

                  <!-- <a href="/auth/google" >
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" alt="Google Img" height="50px" width="50px">
                    </a> -->
                  
                
                </div>
              </form>
         </div>
    </div>
     
 </main>
